    },
    "AuthLambdaFunctionQualifiedArn": {
      "Description": "Current Lambda function version",
      "Value": {
        "Ref": "AuthLambdaVersionXdfRNCo3em4PopQvSnfRSmWyc5BshDIRX5DkRYoPZQ"
      }
